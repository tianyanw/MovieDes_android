<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.asu.bscs.tianyanw.mymoviedescriptions.MovieinfoActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to Movie Description"
        android:id="@+id/textView"
        android:textSize="16dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title"
        android:id="@+id/titleTV"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/buttondelete"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:id="@+id/buttondelete"
        android:textSize="16dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:onClick="buttondelete" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Year"
        android:id="@+id/yearTV"
        android:layout_alignTop="@+id/titleTV"
        android:layout_toRightOf="@+id/buttondelete"
        android:layout_toEndOf="@+id/buttondelete" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RunTime"
        android:id="@+id/runtimeTV"
        android:layout_marginTop="27dp"
        android:layout_below="@+id/titleTV"
        android:layout_alignLeft="@+id/titleTV"
        android:layout_alignStart="@+id/titleTV" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rated"
        android:id="@+id/ratedTV"
        android:layout_above="@+id/releasedTV"
        android:layout_alignRight="@+id/yearTV"
        android:layout_alignEnd="@+id/yearTV" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Released"
        android:id="@+id/releasedTV"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/runtimeTV"
        android:layout_alignLeft="@+id/runtimeTV"
        android:layout_alignStart="@+id/runtimeTV" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Genre"
        android:id="@+id/genreTV"
        android:layout_below="@+id/releasedTV"
        android:layout_alignLeft="@+id/releasedTV"
        android:layout_alignStart="@+id/releasedTV"
        android:layout_marginTop="33dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Actors"
        android:id="@+id/actorsTV"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/genreTV"
        android:layout_alignLeft="@+id/genreTV"
        android:layout_alignStart="@+id/genreTV" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Plot"
        android:id="@+id/plotTV"
        android:layout_marginTop="34dp"
        android:layout_below="@+id/actorsTV"
        android:layout_alignLeft="@+id/actorsTV"
        android:layout_alignStart="@+id/actorsTV" />


</RelativeLayout>
