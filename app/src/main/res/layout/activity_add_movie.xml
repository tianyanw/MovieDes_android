<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context ="edu.asu.bscs.tianyanw.mymoviedescriptions.AddMovieActivity" >



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to Movie Description"
        android:id="@+id/textView2"
        android:textSize="16dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/title"
        android:layout_marginTop="22dp"
        android:layout_below="@+id/buttonsubmit"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Title" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/buttonsubmit"
        android:textSize="16dp"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:onClick="buttonsubmit" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/year"
        android:layout_alignTop="@+id/title"
        android:layout_toRightOf="@+id/buttonsubmit"
        android:layout_toEndOf="@+id/buttonsubmit"
        android:hint="Year" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/runtime"
        android:layout_marginTop="27dp"
        android:layout_below="@+id/title"
        android:layout_alignLeft="@+id/title"
        android:layout_alignStart="@+id/title"
        android:hint="RunTime" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rated"
        android:layout_above="@+id/released"
        android:layout_alignRight="@+id/year"
        android:layout_alignEnd="@+id/year"
        android:hint="Rated" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/released"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/runtime"
        android:layout_alignLeft="@+id/runtime"
        android:layout_alignStart="@+id/runtime"
        android:hint="Released" />

    <Spinner
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner"
        android:spinnerMode="dropdown"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/rated"
        android:layout_alignStart="@+id/rated" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/actors"
        android:layout_marginTop="41dp"
        android:layout_below="@+id/spinner"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Actors" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/plot"
        android:layout_marginTop="49dp"
        android:layout_below="@+id/actors"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Plot" />




</RelativeLayout>